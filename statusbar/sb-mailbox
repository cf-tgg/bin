# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e neomutt ;;
	2) setsid -f mw -Y >/dev/null ;;
	3) notify-send "ðŸ“¬ Module courriels" "\
- DÃ©nombre les courriels non-lus
- Affiche ðŸ”ƒlors des mises Ã  jour
- Clic gauche ouvre le client neomutt
- Clic-molette pour mettre Ã  jour" ;;
	6) emc "$0" ;;
esac

unread="$(find ${XDG_DATA_HOME:-$HOME/.local/share}/mail/*/INBOX/new/* -type f | wc -l 2>/dev/null)"

pidof mbsync >/dev/null 2>&1 && icon="ðŸ”ƒ"

[ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ðŸ“¬$unread$icon"

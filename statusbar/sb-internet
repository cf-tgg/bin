#!/bin/sh
# -*- mode: sh; sh-shell: sh; -*- vim: ft=sh:ts=2:sw=2:et:

# Show wifi ï‡«  and percent strength or ğŸ“ if none.
# Show ğŸŸ© if connected to ethernet or ğŸŸ¥ if none.
# Show ğŸ›¡ï¸ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ğŸŒ Internet module" "\- Click to connect
ï„§ : wifi disabled
ğŸ«¥: no wifi connection
ï‡« : wifi connection with quality
ï„§ : no ethernet
ï›¿ :ethernet working
ğŸ›¡ï¸: vpn is active
" ;;
	6) emc "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
	[ "$(awk '/^\s*w/ { print int($3 * 100 / 70) }' /proc/net/wireless)"  -gt 80 ] && exit 0;
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ğŸ«¥" || wifiicon="ï„§ "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ï›¿" || ethericon=""

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ğŸ›¡ï¸"

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"

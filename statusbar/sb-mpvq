#      u*) update_titles && status ;;
#      f*) mpvqfzf ;;
#      h*) usage >&2 ; exit 2 ;;
#      *) return ;;
#  esac

icon=$(cat "/tmp/mpvqicon")

[ "${MPCOUNT}" -ne "${TCOUNTS}" ] && update_titles

[ -n "$(pgrep mpv)" ] && updateicon "ðŸŽ¬" || updateicon "ðŸ“º"

printf "%s |" "$MPCOUNT"
